<div style="margin: auto;position: relative;max-width: 400px;">

  <p style="color: green"><%= notice %></p>
  <h2>
    <%= render @linha %>
  </h2>

  <div>
    <h4>Terminais:</h4>
    <% @linha.terminals.each do |terminal| %>
      <%= render terminal %>
    <% end %>
  </div>

  <div class="show_functions">
    <%= link_to "Edit this linha", edit_linha_path(@linha) %> |
    <%= link_to "Back to linhas", linhas_path %>

    <%= button_to "Destroy this linha", @linha, method: :delete %>
  </div>

  </div>
